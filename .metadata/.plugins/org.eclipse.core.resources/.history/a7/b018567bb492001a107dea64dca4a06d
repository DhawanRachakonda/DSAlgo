package dsalgo.bst;

public class Tree {

	private Node node;
	
	
	public Tree(int value) {
		this.node = new Node(value);
	}
	
	public Tree() {
		this.node = null;
	}
	
	public void addValue(int value) {
		if(this.node == null) {
			this.node = new Node(value);
		} else {
			this.node.addValue(value);
		}
	}


	public Node getNode() {
		return node;
	}


	public void setNode(Node node) {
		this.node = node;
	}
}
